rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function topicOwner(topicId) {
      return signedIn() &&
        get(/databases/{database}/documents/topics/{topicId}).data.ownerId ==
          request.auth.uid;
    }

    function topicWriteValid() {
      return request.resource.data.keys().hasOnly(
        ['title', 'description', 'ownerId', 'createdAt'],
      ) &&
        request.resource.data.ownerId == request.auth.uid;
    }

    match /topics/{topicId} {
      allow read: if signedIn() && resource.data.ownerId == request.auth.uid;
      allow create: if signedIn() && topicWriteValid();
      allow update: if signedIn() &&
        resource.data.ownerId == request.auth.uid &&
        topicWriteValid() &&
        request.resource.data.ownerId == resource.data.ownerId;
      allow delete: if signedIn() && resource.data.ownerId == request.auth.uid;

      match /messages/{messageId} {
        allow read: if topicOwner(topicId);

        allow create: if topicOwner(topicId) &&
          request.resource.data.keys().hasOnly(
            ['content', 'role', 'authorId', 'createdAt'],
          ) &&
          request.resource.data.authorId == request.auth.uid &&
          request.resource.data.role in ['user', 'assistant', 'system'];

        allow update, delete: if topicOwner(topicId);
      }
    }

    // Deny everything else by default.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}


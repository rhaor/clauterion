rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    // For reads/updates/deletes: use existing resource
    function isOwnerExisting() {
      return isSignedIn() &&
        resource.data.keys().hasAny(['ownerId']) &&
        resource.data.ownerId == request.auth.uid;
    }

    // For creates/updates: use incoming data
    function isOwnerNew() {
      return isSignedIn() &&
        request.resource.data.keys().hasAny(['ownerId']) &&
        request.resource.data.ownerId == request.auth.uid;
    }

    // Messages inherit ownership from their parent topic (they don't store ownerId)
    function topicOwner(topicId) {
      return isSignedIn() &&
        get(/databases/$(database)/documents/topics/$(topicId)).data.ownerId == request.auth.uid;
    }

    // Topics collection with messages subcollection
    match /topics/{topicId} {
      allow read: if isOwnerExisting();
      allow create: if isOwnerNew();
      allow update: if isOwnerExisting() && isOwnerNew();
      allow delete: if isOwnerExisting();

      match /messages/{messageId} {
        allow read, create, update, delete: if topicOwner(topicId);

        match /evaluations/{evaluationId} {
          allow read, create, update, delete: if topicOwner(topicId);
        }
      }
    }

    // Fallback for any other docs that carry ownerId directly
    match /{document=**} {
      allow read, delete: if isOwnerExisting();
      allow create: if isOwnerNew();
      allow update: if isOwnerExisting() && isOwnerNew();
    }
  }
}